{
  "name": "glenberry-sql-diagnostic-tool",
  "version": "1.0.0",
  "description": "A comprehensive SQL Server diagnostic tool that runs Glen Berry's diagnostic queries with AI-powered analysis",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "download-queries": "node scripts/download-query-packs.js",
    "prebuild": "npm run download-queries",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "pkg package.json --out-path dist/",
    "build:portable": "npm run build && npm run package:all",
    "package:all": "npm run package:win && npm run package:linux && npm run package:macos",
    "package:win": "pkg . --targets node18-win-x64 --output dist/sql-diagnostic-tool-win.exe",
    "package:linux": "pkg . --targets node18-linux-x64 --output dist/sql-diagnostic-tool-linux",
    "package:macos": "pkg . --targets node18-macos-x64 --output dist/sql-diagnostic-tool-macos",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "sql-server",
    "diagnostics",
    "performance",
    "glen-berry",
    "database",
    "monitoring",
    "ai-analysis"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "cheerio": "^1.1.2",
    "commander": "^11.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "json2csv": "^5.0.7",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mssql": "^10.0.1",
    "multer": "^1.4.5-lts.1",
    "open": "^8.4.2",
    "openai": "^4.20.1",
    "serve-static": "^1.15.0",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "client/dist/**/*",
      "queries/**/*",
      "templates/**/*"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/creativeheadz/glenberry-sql-diagnostic-tool.git"
  },
  "bugs": {
    "url": "https://github.com/creativeheadz/glenberry-sql-diagnostic-tool/issues"
  },
  "homepage": "https://github.com/creativeheadz/glenberry-sql-diagnostic-tool#readme"
}
